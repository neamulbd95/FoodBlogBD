@model FoodBlogBD_Entity.Restaurant_info

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FoodBlogBD Admin</title>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/myDesign.js"></script>
    <script src="~/Scripts/AutoSearch.js"></script>

    <link href="~/Contents/font-awesome.css" rel="stylesheet" />
    <link href="~/Contents/bootstrap.css" rel="stylesheet" />
    <link href="~/Contents/style.css" rel="stylesheet" />

</head>
<body>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#searchtxt").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/AdminSearch/LiveSearch",
                        type: "POST",
                        dataType: "json",
                        data: { Prefix: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.productName, value: item.productName };
                            }))

                        }
                    })
                },
                messages: {
                    noResults: "", results: ""
                }
            });
        })
    </script>

    <div>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/Admin/Index"><span class="glyphicon glyphicon-home fa-2x"></span></a>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> Admin</a></li>
                    <li>
                        <a href="/UserAuthentication/LogOut/"><span class="glyphicon glyphicon-log-out"></span> Log Out</a>
                    </li>

                </ul>
            </div>
        </nav>
        <br />
        @using (Html.BeginForm("Index", "AdminSearch"))
        {
            <div class="container">
                <div class="input-group">
                    <input type="text" id="searchtxt" name="nameSearch" class="form-control" placeholder="Search" required />
                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </div>
                </div>
            </div>
        }
        <br />

        <div class="headline-big-title-area">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="headline-bit-title text-center">
                            <h2>Add Restaurant</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />

    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12 col-md-offset-3">
                <div class="col-lg-6">
                    @using (Html.BeginForm("AddRest", "AdminRestaurant", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <table class="table table-striped table-hover">
                                <tbody>
                                    <tr>
                                        <td><strong>Restaurant Name</strong></td>
                                        <td>
                                            <input type="text" name="restName" class="form-control" placeholder="Enter Restaurant Name"
                                                    required>
                                            <span id="errorMessagefullname"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Restaurant Detail</strong></td>
                                        <td>
                                            <textarea class="form-control" name="detail" required></textarea>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td><strong>Contact Number</strong></td>
                                        <td>
                                            <input type="tel" name="contactName" class="form-control"
                                                   placeholder="Phone Number" required>
                                            </td>
                                    </tr>

                                    <tr>
                                        <td><strong>Website</strong></td>
                                        <td>
                                            <input type="url" name="webName" class="form-control"
                                                   placeholder="Website" required>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td><strong>Restaurant Logo</strong></td>
                                        <td>
                                            <input type="file" class="form-control-file" id="exampleInputFile" name="Picture" 
                                                    aria-describedby="fileHelp" accept=".png, .jpg, .jpeg" required />
                                        </td>
                                    </tr>

                                    <tr>
                                        <td></td>
                                        <td align="right"><input type="submit" class="btn btn-primary" id="btnSubmit" name="restAddBtn" value="Add"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</body>
</html>


